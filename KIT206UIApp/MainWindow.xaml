<Window x:Class="KIT206.DatabaseApp.UI.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KIT206.DatabaseApp.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindow" Background="#FFF6F7F8">

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="#FFE87511"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#FFABADB3"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="ListBox" x:Key="MeetingsList">
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                    <Setter Property="Background" Value="{x:Null}"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </Style.Resources>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>

        <Style TargetType="ListBox" x:Key="GeneralList">
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                    <Setter Property="Background" Value="{x:Null}"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
            <Setter Property="BorderBrush" Value="#FFABADB3"/>
            <Setter Property="Background" Value="#FFE87511"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <Frame Background="White" NavigationUIVisibility="Hidden"/>
        <Grid Background="#FFF5AE69">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="302*"/>
                <RowDefinition Height="95*"/>
            </Grid.RowDefinitions>
            <Grid Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="39*"/>
                    <RowDefinition Height="214*"/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="22" TextAlignment="Center"><Run Language="en-au" Text="StudentName"/><LineBreak/><Run Language="en-au"/></TextBlock>

            </Grid>



            <ListBox Grid.Row="2" Style="{StaticResource GeneralList}" SelectionChanged="ListBox_SelectionChanged" Margin="2,2,2,2">
                <ListBoxItem Content="Class Details" HorizontalAlignment="Center"/>
                <Separator Background="Black"/>
                <Button Content="2pm Tuesday at D33Z"/>
            </ListBox>


        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.35*"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="303*"/>
                    <ColumnDefinition Width="281*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name ="GroupName" Grid.Row="0" FontWeight="Bold" FontFamily="Comic Sans MS" TextAlignment="Center" FontSize="25" Text="123456789012345678901234567890" Margin="30,0,10,30" Background="White" TextWrapping="Wrap" Grid.ColumnSpan="2" Height="35" VerticalAlignment="Stretch" HorizontalAlignment="Center">

                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button Grid.Row="0" Content="Leave" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource RoundButton}" Grid.Column="1" Margin="0,0,2,2"/>
                <Button Grid.Row="0" Content="Edit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource RoundButton}" Margin="0,0,65,2" Grid.Column="1"/>
                <Separator VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,0,2"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition/>
                        <RowDefinition Height="145*"/>
                    </Grid.RowDefinitions>

                    <Button Style="{DynamicResource RoundButton}" Grid.Row="0" Content="Group Members" Click="Button_Click_1" Margin="2,2,2,2" />

                    <ListBox Grid.Row="2" Style="{StaticResource GeneralList}">
                        <TextBlock Text="Zander"/>
                        <TextBlock Text="Tyler Mac Fuckface"/>
                        <TextBlock Text="Yordanian"/>
                        <TextBlock Text="Callhoom"/>
                    </ListBox>

                </Grid>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0">Meetings</TextBlock>
                    <Separator Background="Black" RenderTransformOrigin="0.497,1.382"/>
                    <TextBlock Grid.Row="1">23/04 23:00</TextBlock>
                    <Button Grid.Row="1" Content="Edit" HorizontalAlignment="Left" Style="{DynamicResource RoundButton}" Margin="266,0,0,0" Width="60" />
                    <Button Grid.Row="1" Content="Council" HorizontalAlignment="Right" Style="{DynamicResource RoundButton}"/>
                    <TextBlock Grid.Row="2">30/04 09:30</TextBlock>
                    <Button Grid.Row="2" Content="Edit" HorizontalAlignment="Right" Style="{DynamicResource RoundButton}" Margin="0,2,55,51" Width="60" Grid.RowSpan="2"/>
                    <Button Grid.Row="2" Content="Council" HorizontalAlignment="Right" Style="{DynamicResource RoundButton}"/>
                </Grid>

            </Grid>
        </Grid>


    </Grid>

</Window>
