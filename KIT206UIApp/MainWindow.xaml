<Window x:Class="KIT206.DatabaseApp.UI.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KIT206.DatabaseApp.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindow" Background="#FFF6F7F8">

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="#FFE87511"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#FFABADB3"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="ListBox" x:Key="MeetingsList">
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                    <Setter Property="Background" Value="{x:Null}"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </Style.Resources>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>

        <Style TargetType="ListBox" x:Key="GeneralList">
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                    <Setter Property="Background" Value="{x:Null}"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
            <Setter Property="BorderBrush" Value="#FFABADB3"/>
            <Setter Property="Background" Value="#FFE87511"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <Frame Background="White" NavigationUIVisibility="Hidden"/>
        <Grid Background="#FFF5AE69">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="22" TextAlignment="Center"><Run Language="en-au" Text="{Binding LastName}"/><LineBreak/><Run Language="en-au"/></TextBlock>
            </StackPanel>
            <TextBlock Grid.Row="1" FontSize="22" TextAlignment="Center">StudentDetails</TextBlock>
            <Separator Grid.Row="1" Background="Black" VerticalAlignment="Bottom"/>
            <ListBox Grid.Row="2" Style="{StaticResource GeneralList}">
                <!--
                <ListBoxItem FontSize="15" Content="Student Name: Meow"/>
                <ListBoxItem FontSize="15" Content= "StudentID: 696969"/>
                <ListBoxItem FontSize="15" Content="Email:"/>
                -->
            </ListBox>


            <ListBox Grid.Row="3" Style="{StaticResource GeneralList}" SelectionChanged="ListBox_SelectionChanged" Margin="2,2,2,2">
                <ListBoxItem Content="Class Details" HorizontalAlignment="Center"/>
                <Separator Background="Black"/>
                <TextBlock x:Name ="ClassName" Text="{Binding Path=String}"></TextBlock>
            </ListBox>


        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.35*"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="303*"/>
                    <ColumnDefinition Width="281*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name ="GroupName" Grid.Row="0" FontWeight="Bold" FontFamily="Comic Sans MS" TextAlignment="Center" FontSize="25" Text="{Binding Path=GroupName, Mode=OneWay}" Margin="30,0,10,30" Background="White" TextWrapping="Wrap" Grid.ColumnSpan="2" Height="35" VerticalAlignment="Stretch" HorizontalAlignment="Center">

                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button Grid.Row="0" Content="Leave" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{DynamicResource RoundButton}" Grid.Column="1" Width="50"/>
                <Button Grid.Row="0" Content="Edit" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{DynamicResource RoundButton}" Margin="0,2,52,0" Grid.Column="1" Width="50" Click="Button_Click"/>
                <Separator VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,0,2"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition/>
                        <RowDefinition Height="145*"/>
                    </Grid.RowDefinitions>

                    <Button Style="{DynamicResource RoundButton}" Grid.Row="0" Content="Group Members" Click="Button_Click_1" Margin="2,2,2,2" />

                    <ListBox x:Name="GroupMembers" Grid.Row="2" Style="{StaticResource GeneralList}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FirstName}"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding LastName}"/>
                                </StackPanel>
                                
                            </DataTemplate>
                            
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>

                <Grid Grid.Column="0">
                    <ListBox>
                        <ListBoxItem Content="Meetings" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                        <Separator Background="Black"/>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal" Background="Black">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" FontSize="20">23/04 23:00</TextBlock>
                                <Button HorizontalAlignment="Right" Content="Edit" Style="{DynamicResource RoundButton}" Margin="200,0,0,0" Width="40"/>
                                <Button HorizontalAlignment="Right" Content="Council" Style="{DynamicResource RoundButton}" Margin="0,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" FontSize="20">30/04 09:30</TextBlock>
                                <Button Content="Edit" Style="{DynamicResource RoundButton}" Margin="200,0,0,0" Width="40"/>
                                <Button Content="Council" Style="{DynamicResource RoundButton}" Margin="0,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>


    </Grid>

</Window>
